<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ServiceTextStyle">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:textColor">@color/service_text_color</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
    </style>

    <dimen name="padding_8">8dp</dimen>
</resources>
